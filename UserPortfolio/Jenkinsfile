pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '''
                xcodebuild -scheme UserPortfolio \
                           -project UserPortfolio/UserPortfolio.xcodeproj \
                           -sdk iphonesimulator \
                           -configuration Debug build
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                xcodebuild test -scheme UserPortfolio \
                                -project UserPortfolio/UserPortfolio.xcodeproj \
                                -sdk iphonesimulator \
				-configuration Debug \
				-configuration Debug \
				-destination 'platform=iOS Simulator,name=iPhone 16,OS=18.3.1'
                '''
            }
        }
    }
}
